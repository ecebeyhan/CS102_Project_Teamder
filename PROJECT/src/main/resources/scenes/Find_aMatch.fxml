<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="383.0" prefWidth="640.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="scenes.FindMatchController">
  <children>
      <SplitPane prefHeight="385.0" prefWidth="640.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="403.0" prefWidth="638.0">
               <children>
                  <Label layoutX="12.0" layoutY="62.0" text="Sports" />
                  <Label layoutX="15.0" layoutY="172.0" text="City" />
                  <ComboBox fx:id="cityComboBox" editable="true" layoutX="13.0" layoutY="192.0" prefWidth="150.0" promptText="Trabzon" />
                  <Label layoutX="13.0" layoutY="230.0" text="Date" />
                  <DatePicker fx:id="datePicker" layoutX="11.0" layoutY="250.0" promptText="DD/MM/YYYY" />
                  <Label layoutX="15.0" layoutY="39.0" text="Filter Matches">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Button cancelButton="true" layoutX="1.0" layoutY="2.0" mnemonicParsing="false" onAction="#clickOnCancel" text="CANCEL" />
                  <RadioButton fx:id="football" layoutX="18.0" layoutY="87.0" mnemonicParsing="false" text="Football">
                     <toggleGroup>
                        <ToggleGroup fx:id="sports" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="volleyball" layoutX="18.0" layoutY="107.0" mnemonicParsing="false" text="Volleyball" toggleGroup="$sports" />
                  <RadioButton fx:id="basketball" layoutX="18.0" layoutY="128.0" mnemonicParsing="false" text="Basketball" toggleGroup="$sports" />
                  <RadioButton fx:id="tennis" layoutX="18.0" layoutY="150.0" mnemonicParsing="false" text="Tennis" toggleGroup="$sports" />
                  <TextField fx:id="matchNameTField" layoutX="257.0" layoutY="37.0" promptText="Enter Match Name" />
                  <Button defaultButton="true" layoutX="439.0" layoutY="37.0" mnemonicParsing="false" onAction="#clickSearchButton" text="SEARCH" />
                  <TableView fx:id="matchTable" layoutX="239.0" layoutY="108.0" prefHeight="261.0" prefWidth="391.0">
                    <columns>
                      <TableColumn fx:id="matchNameColumn" prefWidth="151.0" text="Match Name" />
                      <TableColumn fx:id="matchDateColumn" prefWidth="142.0" text=" Date" />
                        <TableColumn fx:id="matchCityColumn" prefWidth="96.0" text="City" />
                    </columns>
                  </TableView>
                  <Label fx:id="matchFoundLabel" layoutX="267.0" layoutY="71.0" prefHeight="25.0" prefWidth="223.0" text="Label">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="errorLabel" layoutX="439.0" layoutY="75.0" prefHeight="17.0" prefWidth="193.0" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
  </children>
</VBox>
